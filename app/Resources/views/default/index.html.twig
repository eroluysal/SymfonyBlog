{% extends 'base.html.twig' %}

{% block body %}
  {% for post in posts %}
  <div class="blog-post">
    <h2 class="blog-post-title">
      <a href="{{ path('post_show', {"slug": post.slug}) }}">{{ post.title }}</a>
    </h2>
    <p class="blog-post-meta">{{ post.createdAt|date("m/d/Y") }} by {{ post.user.name }}</p>
    {{ post.content|format }}
  </div><!-- /.blog-post -->
  {% endfor %}
{% endblock %}
